# MCP Environment Configuration - Recommended Security Settings
# DO NOT commit this file to version control

# Performance Settings
NODE_ENV=production
PORT=3000
MCP_MAX_CONCURRENT_REQUESTS=50
MCP_REQUEST_TIMEOUT_MS=15000
MCP_CACHE_TTL=3600
MCP_LOG_LEVEL=INFO

# Security Settings
MCP_TLS_ENABLED=true
MCP_TLS_MIN_VERSION=TLSv1.2
MCP_AUTH_OAUTH2_ENABLED=false
MCP_AUTH_MFA_REQUIRED=false
MCP_INPUT_VALIDATION_ENABLED=true

# Monitoring Settings
MCP_METRICS_ENABLED=true
MCP_PROMETHEUS_ENABLED=true
MCP_PROMETHEUS_PATH=/metrics
MCP_ALERTING_ENABLED=true

# Resource Limits
MCP_MEMORY_REQUEST=256Mi
MCP_MEMORY_LIMIT=1Gi
MCP_CPU_REQUEST=250m
MCP_CPU_LIMIT=1000m

# Logging Settings
MCP_LOG_STRUCTURED=true
MCP_LOG_FORMAT=json
MCP_LOG_MASK_PII=true
MCP_LOG_ROTATION_MAX_SIZE=100m
MCP_LOG_ROTATION_MAX_FILES=5

