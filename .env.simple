# Simple VIPER Trading Bot Configuration
# Copy this to .env and configure your settings

# Bitget API Credentials (REQUIRED)
BITGET_API_KEY=your_api_key_here
BITGET_API_SECRET=your_api_secret_here
BITGET_API_PASSWORD=your_api_password_here

# Trading Configuration
POSITION_SIZE_USDT=100        # Position size in USDT per trade
VIPER_THRESHOLD=65           # Signal threshold (0-100)
TAKE_PROFIT_PCT=3.0          # Take profit percentage
STOP_LOSS_PCT=2.0            # Stop loss percentage
MAX_POSITIONS=5              # Maximum concurrent positions
MIN_VOLUME=1000000           # Minimum 24h volume filter

# Risk Management
DAILY_LOSS_LIMIT=0.05        # 5% daily loss limit
MAX_TRADES_PER_DAY=20        # Maximum trades per day

# Logging
LOG_LEVEL=INFO               # DEBUG, INFO, WARNING, ERROR